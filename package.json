{
  "name": "api-clean-architecture",
  "version": "1.0.0",
  "description": "Template for api clean architecture",
  "main": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:gulp": "gulp copyEnv",
    "build:tsc": "tsc -p ./tsconfig.prd.json",
    "build": "npm rum build:clean && npm run build:tsc && npm run build:gulp",
    "dev": "tsnd --respawn -r tsconfig-paths/register src/index.ts",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix . --ext .ts",
    "lint": "eslint --ext .ts .",
    "prepare": "husky install",
    "debug": "tsnd --inspect --respawn -r tsconfig-paths/register src/index.ts",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "test": "jest"
  },
  "keywords": [],
  "author": "Luis Enrique Morocho Febres",
  "license": "ISC",
  "dependencies": {
    "@fastify/awilix": "^3.2.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.2",
    "@fastify/swagger-ui": "^1.10.1",
    "@fastify/swagger": "^8.12.0",
    "awilix": "^9.0.0",
    "bcrypt": "^5.1.1",
    "fastify-plugin": "^4.5.1",
    "fastify-zod": "^1.4.0",
    "fastify": "^4.24.1",
    "mongoose": "^7.6.2",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "yenv": "^3.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint": "^8.51.0",
    "gulp-copy": "^4.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.2.2"
  }
}
